<%- include('partials/header.ejs') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-5">
            <h1 class="mb-4">Edit Category</h1>
            <% if (locals.category) { %>
            <form method="post" action="/save-category">
                <input type="hidden" name="categoryId" value="<%= category.id %>">
                <div class="mb-3">
                    <label for="titleInput" class="form-label">Title</label>
                    <input type="text" class="form-control" id="titleInput" name="title" value="<%= category.title %>" required>
                </div>
                <div class="float-start">
                    <a href="/categories" class="btn btn-light">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="float-end">
                    <button type="submit" formaction="/delete-category" class="btn btn-danger">Delete</button>
                </div>
            </form>
            <% } %>
        </div>
    </div>
</div>
    
<%- include('partials/footer.ejs') %>